#include "libft.h"

size_t strlcpy (char *dest, const char* src, size_t dest_size)
{
  size_t i;

  if (!dest || !src)
    return (0);
  i = 0;
  while (src[i])
		i++;
	if (dest_size == 0)
		return (i);
	i = 0;
	while (src[i] && i < dest_size - 1)
	{
		dest[i] = src[i];
		i++;
	}
	dest[i] = '\0';
	i = 0;
	while (src[i])
		i++;
	return (i);

}
